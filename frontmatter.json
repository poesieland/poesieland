{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "description": "poem title",
          "required": true
        },
        {
          "title": "ID",
          "name": "id",
          "type": "string",
          "description": "normalized title + _N",
          "required": true
        },
        {
          "title": "Writing date",
          "name": "date",
          "type": "datetime",
          "required": true,
          "dateFormat": "yyyy-MM-dd"
        },
        {
          "title": "Weight",
          "name": "weight",
          "type": "number",
          "required": true,
          "min": 1,
          "max": 50,
          "step": 1
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Additional description",
          "name": "info",
          "type": "string"
        },
        {
          "title": "Type (sonnet, pantoum...)",
          "name": "type",
          "type": "string"
        },
        {
          "title": "Acrostiche (also add acrostiche tag)",
          "name": "acrostiche",
          "type": "string"
        },
        {
          "title": "Double acrostiche, with | separator (also add doubleAcrostiche tag)",
          "name": "doubleAcrostiche",
          "type": "string"
        },
        {
          "title": "Verse length",
          "name": "verseLength",
          "type": "number",
          "required": false,
          "min": 0,
          "max": 14,
          "step": 1
        },
        {
          "title": "LastModifierDisplayName",
          "name": "LastModifierDisplayName",
          "type": "string",
          "default": "Barbara Post"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "poems",
      "path": "[[workspace]]/content/fr/seasons"
    }
  ],
  "frontMatter.content.snippets": {},
  "frontMatter.extends": [
    "./themes/hugo-theme-relearn/vscode-frontmatter/snippets.en.json"
  ]
}